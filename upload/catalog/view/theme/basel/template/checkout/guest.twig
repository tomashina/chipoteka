<h2 class="h6 pt-1 pb-3 mb-3 mt-3 border-bottom">{{ text_your_details }}</h2>
<div class="row" id="account">
    <div class="form-group" style="display: {% if customer_groups|length > 10 %} block {% else %} none {% endif %};">
        <label class="control-label">{{ entry_customer_group }}</label>
        {% for customer_group in customer_groups %}
            {% if customer_group.customer_group_id == customer_group_id %}
                <div class="radio">
                    <label>
                        <input type="radio" name="customer_group_id" value="{{ customer_group.customer_group_id }}" checked="checked" />
                        {{ customer_group.name }}</label>
                </div>
            {% else %}
                <div class="radio">
                    <label>
                        <input type="radio" name="customer_group_id" value="{{ customer_group.customer_group_id }}" />
                        {{ customer_group.name }}</label>
                </div>
            {% endif %}
        {% endfor %}
    </div>

    <div class="col-sm-6">
        <div class="form-group mb-3 required">
            <label class="form-label" for="input-payment-firstname">{{ entry_firstname }}<span class="text-danger">*</span></label>
            <input type="text" name="firstname" value="{{ firstname }}" placeholder="{{ entry_firstname }}" id="input-payment-firstname" class="form-control" />
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group mb-3 required">
            <label class="form-label" for="input-payment-lastname">{{ entry_lastname }}<span class="text-danger">*</span></label>
            <input type="text" name="lastname" value="{{ lastname }}" placeholder="{{ entry_lastname }}" id="input-payment-lastname" class="form-control" />
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group mb-3 required">
            <label class="form-label" for="input-payment-email">{{ entry_email }}<span class="text-danger">*</span></label>
            <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-payment-email" class="form-control" />
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group mb-3 required">
            <label class="form-label" for="input-payment-telephone">{{ entry_telephone }}<span class="text-danger">*</span></label>
            <input type="text" name="telephone" value="{{ telephone }}" placeholder="{{ entry_telephone }}" id="input-payment-telephone" class="form-control" />
        </div>
    </div>

    <div class="col-sm-12">
        <div class=" mb-3 ">
            <label class="form-check-label" >
                <input type="checkbox" href="#collapseR" class="form-check-input" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseR">
                Trebam R1 račun</label>
        </div>
    </div>

</div>
<div class="collapse row" id="collapseR">
    {% for custom_field in custom_fields %}
        <div class="col-sm-6">
            {% if custom_field.location == 'account' %}
                {% if custom_field.type == 'text' %}
                    <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field mb-3" data-sort="{{ custom_field.sort_order }}">
                        <label class="form-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }} <span class="text-danger">*</span></label>
                        <input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% else %} {{ custom_field.value }} {% endif %}" placeholder="{{ custom_field.name }}" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control" />
                    </div>
                {% endif %}
            {% endif %}
        </div>
    {% endfor %}
</div>

<h2 class="h6 pt-1 pb-3 mb-3 mt-3 border-bottom">{{ text_your_address }}</h2>
<div class="row" id="address">
    <div class="form-group d-none">
        <label class="control-label" for="input-payment-company">{{ entry_company }}</label>
        <input type="text" name="company" value="{{ company }}" placeholder="{{ entry_company }}" id="input-payment-company" class="form-control" />
    </div>
    <div class="col-sm-6">
        <div class="form-group mb-3 required">
            <label class="form-label" for="input-payment-address-1">{{ entry_address_1 }}<span class="text-danger">*</span></label>
            <input type="text" name="address_1" value="{{ address_1 }}" placeholder="{{ entry_address_1 }}" id="input-payment-address-1" class="form-control" />
        </div>
    </div>
    <div class="form-group d-none">
        <label class="control-label" for="input-payment-address-2">{{ entry_address_2 }}</label>
        <input type="text" name="address_2" value="{{ address_2 }}" placeholder="{{ entry_address_2 }}" id="input-payment-address-2" class="form-control" />
    </div>
    <div class="col-sm-6">
        <div class="form-group dropdown mb-3 required">
            <label class="form-label" for="input-payment-city">{{ entry_city }}<span class="text-danger">*</span></label>
            <input type="text" name="city" value="{{ city }}" placeholder="{{ entry_city }}" id="input-payment-city" class="form-control" autocomplete="off" />
            <div id="payment-city-drop" class="dropdown-menu" style="display: none;"></div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group dropdown mb-3 required">
            <label class="form-label" for="input-payment-postcode">{{ entry_postcode }}<span class="text-danger">*</span></label>
            <input type="text" name="postcode" value="{{ postcode }}" placeholder="{{ entry_postcode }}" id="input-payment-postcode" class="form-control" autocomplete="off" />
            <div id="payment-postcode-drop" class="dropdown-menu" style="display: none;"></div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group mb-3 required">
            <label class="form-label" for="input-payment-country">{{ entry_country }}<span class="text-danger">*</span></label>
            <select name="country_id" id="input-payment-country" class="form-select">
                <option value="">{{ text_select }}</option>
                {% for country in countries %}
                    {% if country.country_id == country_id %}
                        <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
                    {% else %}
                        <option value="{{ country.country_id }}">{{ country.name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group d-none">
        <label class="form-label" for="input-payment-zone">{{ entry_zone }}</label>
        <select name="zone_id" id="input-payment-zone" class="form-control">
        </select>
    </div>
    {% for custom_field in custom_fields %}
        {% if custom_field.location == 'address' %}
            {% if custom_field.type == 'text' %}
                <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
                    <label class="control-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
                    <input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% else %} {{ custom_field.value }} {% endif %}" placeholder="{{ custom_field.name }}" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control" />
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
</div>
{{ captcha }}
    {% if shipping_required %}
        <div class="col-sm-12 ">
            <div class="form-group mb-3 checkbox ">
                <label class="form-check-label"> {% if shipping_address %}
                        <input type="checkbox" class="form-check-input" name="shipping_address" value="1" checked="checked" />
                    {% else %}
                        <input type="checkbox"  class="form-check-input"  name="shipping_address" value="1" />
                    {% endif %}
                    <span>{{ entry_shipping }}</span></label>
            </div>
        </div>
    {% endif %}
<div class="d-flex pt-4 mt-3">
    <div class="w-50 pe-3"><a class="btn btn-outline-primary d-flex align-items-center justify-content-center w-100" href="{{ cart }}"><i class="fal fa-chevron-left mt-sm-0 me-1"></i><span class="d-none d-sm-inline">Povratak na košaricu</span><span class="d-inline d-sm-none">Košarica</span></a></div>
    <div class="w-50 ps-2"><button type="button" value="{{ button_continue }}" id="button-guest" onclick="window.scrollTo(0, 0)" class="btn btn-primary d-flex align-items-center justify-content-center w-100" ><span class="d-none d-sm-inline">Nastavak na dostavu</span><span class="d-inline d-sm-none">Dostava</span><i class="fal fa-chevron-right mt-sm-0 ms-1"></i></button></div>
</div>

