{% if error_warning %}
  <div class="alert alert-primary alert-dismissible fade show mt-3" role="alert">
    {{ error_warning }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{% endif %}
{% if shipping_methods %}
  <h2 class="h6 pb-3 mt-3 mb-2">{{ text_shipping_method }}</h2>
  <div class="table-responsive">
    <table class="table table-hover fs-sm border-top">
      <thead>
      <tr>
        <th class="align-middle"></th>
        <th class="align-middle">Način dostave</th>
        <th class="align-middle">Vrijeme dostave</th>
        <th class="align-middle">Cijena</th>
      </tr>
      </thead>
      <tbody>
  {% for shipping_method in shipping_methods %}
    {% if not shipping_method.error %}
      {% for quote in shipping_method.quote %}
        <tr>
          <td>

            <div class="form-check mb-0">
              {% if quote.code == code or not code %}
              <label class="form-check-label" for="{{ quote.code }}">
                {% set code = quote.code %}
                <input class="form-check-input" type="radio" name="shipping_method" id="{{ quote.code }}" value="{{ quote.code }}" checked="checked" />

              {% else %}
                <input class="form-check-input" type="radio" name="shipping_method" id="{{ quote.code }}" value="{{ quote.code }}" />

              {% endif %}
              </label>
            </div>

          </td>
          <td class="align-middle"><span class="text-dark fw-medium">{{ shipping_method.title }}</span><br><span class="text-muted"> {{ quote.title }}</span></td>
          <td class="align-middle">1 - 3 dana</td>
          <td class="align-middle">{{ quote.text }}</td>
        </tr>
      {% endfor %}
    {% else %}
      <tr>
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
          {{ shipping_method.error }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </tr>
    {% endif %}


  {% endfor %}

      </tbody>
    </table>
  </div>

{% endif %}
<div class="form-group mb-3 required">
  <label class="form-label" for="input-payment-firstname">Dodatna napomena</label>
  <textarea class="form-control" name="comment" style="height: 120px;" placeholder="Ukoliko imate dodatnih napomena vezano uz isporuku molimo upišite ovdje">{{ comment }}</textarea>
</div>



<div class="d-flex pt-4 mt-3">
  <div class="w-50 pe-3"><a class="btn btn-outline-primary d-block w-100" href="{{ checkout }}"><i class="ci-arrow-left mt-sm-0 me-1"></i><span class="d-none d-sm-inline">Vaši podaci</span><span class="d-inline d-sm-none">Vaši podaci</span></a></div>
  <div class="w-50 ps-2"><button type="button" value="{{ button_continue }}" id="button-shipping-method" onclick="window.scrollTo(0, 0)" class="btn btn-primary d-block w-100" ><span class="d-none d-sm-inline">Način plaćanja</span><span class="d-inline d-sm-none">Način plaćanja</span><i class="ci-arrow-right mt-sm-0 ms-1"></i></button></div>
</div>


