



<div class="d-sm-flex justify-content-between align-items-center bg-secondary p-3 rounded-3  ">
    <div class="d-inline-flex align-items-center">


        <div class="form-check form-check-inline">
            {% if account == 'guest' %}
                <input type="radio" class="form-check-input" name="account" value="guest" checked="checked" />
            {% else %}
                <input type="radio" class="form-check-input" name="account" value="guest" />
            {% endif %}
            <label class="form-check-label" >{{ text_guest }}</label>
        </div>


        <div class="form-check form-check-inline me-0">
            {% if account == 'register' %}
                <input type="radio" class="form-check-input" name="account" value="register" checked="checked" />
            {% else %}
                <input type="radio" class="form-check-input" name="account" value="register" />
            {% endif %}

            <label class="form-check-label" >{{ text_register }}</label>
        </div>




    </div>

   <a href="#collapseExample" id="hide" class="btn btn-light btn-sm btn-shadow mt-0  float-end  mt-sm-0" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseExample">
        <i class="fal fa-sign-in"></i> {{ text_login }}
    </a>

    </div>


    <div class="collapse mt-3" id="collapseExample">

        <div class="card">
            <div class="card-body" id="loginbox">

                    <h2 class="h6 pt-1 pb-3 mb-3 border-bottom">{{ text_returning_customer }}</h2>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group mb-3 required">
                                <label class="form-label" for="input-email">{{ entry_email }}<span class="text-danger">*</span></label>
                                <input type="text"  name="email" value="" placeholder="{{ entry_email }}" id="input-email" class="form-control" />

                                <div class="form-text">   <a href="{{ forgotten }}" class="label-link ">{{ text_forgotten }}</a></div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group mb-3 required">
                                <label class="form-label" for="input-password">{{ entry_password }}<span class="text-danger">*</span></label>
                                <input type="password" name="password" value="" placeholder="{{ entry_password }}" id="input-password" class="form-control" />


                            </div>
                        </div>
                        <div class="col-sm-6">  <input type="button" value="{{ button_login }}" id="button-login" data-loading-text="{{ text_loading }}" class="btn btn-primary" /></div>

                    </div>
            </div>
    </div>


    <script>
            $(document).ready(function(){
                $('#hide').click(function() {
                    $('#collapseExample').show()
                    $('#collapse-payment-address').hide()
                    $('input[type="radio"]').prop('checked', false);

                });
                $('input:radio[name="account"]').change(function(){
                    $('#collapse-payment-address').show()
                    $('#collapseExample').hide()

                });

            });
        </script>

