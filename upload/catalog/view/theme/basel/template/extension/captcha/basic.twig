{% if route|slice(0, 9) == 'checkout/' %}
    
    <div class="form-group required margin-b10">
    <label class="control-label" for="input-payment-captcha">{{ entry_captcha }}</label>
    <input type="text" name="captcha" id="input-payment-captcha" class="form-control margin-b10" />
    <img src="index.php?route=extension/captcha/basic/captcha" alt="" class="margin-b10" />
    </div>
    
{% elseif route|slice(0, 8) == 'product/' %}

    <label class="control-label" for="input-payment-captcha">{{ entry_captcha }}</label>
    <input type="text" name="captcha" id="input-payment-captcha" class="form-control margin-b10 grey" />
    <img src="index.php?route=extension/captcha/basic/captcha" alt="" class="margin-b10" />
    
{% elseif route|slice(0, 12) == 'information/' %}

    <div class="form-group required margin-b10">
    <label class="control-label" for="input-payment-captcha">{{ entry_captcha }}</label>
    <input type="text" name="captcha" id="input-payment-captcha" class="form-control margin-b10" />
    <img src="index.php?route=extension/captcha/basic/captcha" alt="" class="margin-b10" />
    {% if error_captcha %}
    <div class="text-danger">{{ error_captcha }}</div>
    {% endif %}
    </div>
    
{% else %}

    <div class="form-group required margin-b10">
    <label class="col-sm-2 control-label" for="input-captcha">{{ entry_captcha }}</label>
    <div class="col-sm-10">
    <input type="text" name="captcha" id="input-captcha" class="form-control margin-b10" />
    <img src="index.php?route=extension/captcha/basic/captcha" alt="" />
    {% if error_captcha %}
    <div class="text-danger">{{ error_captcha }}</div>
    {% endif %}
    </div>
    </div>
    
{% endif %}