
<section class="pt-3 pt-md-4" {% if use_margin %}style="margin-bottom: {{ margin }}"{% endif %}>
    {% if block_title %}
    <!-- Heading-->
    <div class="d-flex flex-wrap justify-content-between align-items-center pt-1 border-bottom pb-4 mb-4">
        {% if title %}  <h2 class="h3 mb-0 pt-3 me-3">{{ title }}</h2>{% endif %}
        {% if use_button %}   <div class="pt-3"><a class="btn btn-outline-accent btn-sm" href="{{ link_href ? link_href : '' }}">{{ link_title }}<i class="ci-arrow-right ms-1 me-n1"></i></a></div>{% endif %}
    </div>

    {% endif %}


    <div class="tns-carousel tns-controls-static tns-controls-outside tns-nav-enabled pt-2">
        <div class="tns-carousel-inner" data-carousel-options="{&quot;items&quot;: 2, &quot;gutter&quot;: 16, &quot;controls&quot;: true, &quot;autoHeight&quot;: true, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:1}, &quot;480&quot;:{&quot;items&quot;:2}, &quot;720&quot;:{&quot;items&quot;:3}, &quot;991&quot;:{&quot;items&quot;:2}, &quot;1140&quot;:{&quot;items&quot;:3}, &quot;1300&quot;:{&quot;items&quot;:4}, &quot;1500&quot;:{&quot;items&quot;:5}}}">


            <!-- Product Group(s) -->
            {% for key, tab in tabs %}

                    {% for product in tab.products %}


                        <div>
                            {% if product.price and product.special and product.sale_badge %}
                            <div class="card product-card card-static pb-3"><span class="badge bg-danger badge-shadow">{{ product.sale_badge }}</span>
                                {% endif %}
                                <button class="btn-wishlist btn-sm" type="button" data-bs-toggle="tooltip" data-bs-placement="left" onclick="wishlist.add('{{ product.product_id }}');" title="{{ button_wishlist }}"><i class="ci-heart"></i></button><a class="card-img-top d-block overflow-hidden" href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}"></a>
                                <div class="card-body py-2"><a class="product-meta d-block fs-xs pb-1" href="#">Snacks, Sweets and Chips</a>
                                    <h3 class="product-title fs-sm text-truncate"><a href="grocery-single.html">{{ product.name }}</a></h3>

                                    {% if product.price %}
                                        <div class="product-price">
                                            {% if product.special %}
                                                <span class="text-accent">{{ product.price }}</span>
                                                <del class="fs-sm text-muted">{{ product.special }}</del>
                                            {% else %}
                                                <span class="text-accent"> {{ product.price }}</span>
                                            {% endif %}
                                        </div><!-- .price -->
                                    {% endif %}

                                </div>
                                <div class="product-floating-btn">
                                    <button class="btn btn-primary btn-shadow btn-sm" type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">+<i class="ci-cart fs-base ms-1"></i></button>
                                </div>
                            </div>
                        </div>






                    {% endfor %}

            {% endfor %}


        </div>
    </div>
</section>

