<div class="widget">
<div class="widget-title">
    <p class="main-title"><span>{{ heading_title_category }}</span></p>
    <p class="widget-title-separator"><i class="icon-line-cross"></i></p>
</div>
{% if categories %}
<ul class="plain-menu blog-menu">
{% for category_1 in categories %}
   {% if category_1.category_1_id == category_1_id %}
     <li class="open active"><a href="{{ category_1.href }}" >{{ category_1.name }}</a>
      {% else %}
      <li><a href="{{ category_1.href }}" >{{ category_1.name }}</a> 
      {% endif %}
      {% if category_1.children %}
      <div class="sign"><i class="icon-arrow-right"></i></div>
      <ul>
      {% for category_2 in category_1.children %}
      <li class="open active"><a href="{{ category_2.href }}">{{ category_2.name }}</a></li>
      {% endfor %}
      </ul>
      {% endif %}
    </li>
{% endfor %}
</ul>
{% endif %}
</div>
<script>        
	$('.plain-menu.blog-menu li').bind().click(function(e) {
	$(this).toggleClass("open").find('>ul').stop(true, true).slideToggle(350)
	.end().siblings().find('>ul').slideUp().parent().removeClass("open");
	e.stopPropagation();
	});
	$('.plain-menu.blog-menu li a').click(function(e) {
	e.stopPropagation();
	});
</script>