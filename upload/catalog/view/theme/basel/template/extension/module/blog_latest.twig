<section class="pt-0 " {% if use_margin %}style="margin-bottom: {{ margin }}"{% endif %}>
    {% if block_title %}
        <!-- Heading-->
        <div class="section-title">
            {% if title %}  <h2 class="title">{{ title }}</h2>{% endif %}
            {% if use_button %}  <div class="pt-3"><a class="btn btn-see-all" href="{{ blog_show_all }}">{{ text_show_all }}<i class="fal fa-chevron-right"></i></a></div>{% endif %}
        </div>
    {% endif %}

    <div class="featured-posts-carousel tns-carousel  tns-controls-static tns-controls-outside tns-nav-enabled py-3 mx-n2">
        <div class="tns-carousel-inner" data-carousel-options="{&quot;items&quot;: 2, &quot;nav&quot;: true, &quot;autoHeight&quot;: true, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:1},&quot;700&quot;:{&quot;items&quot;:2, &quot;gutter&quot;: 20},&quot;1240&quot;:{&quot;items&quot;:3, &quot;gutter&quot;: 16},&quot;1440&quot;:{&quot;items&quot;:4, &quot;gutter&quot;: 16}}}">
         {% if posts %}
            {% for blog in posts %}
            <article>
                {% if blog.image and thumb %}
                <a class="blog-entry-thumb mb-3" href="{{ blog.href }}"><span class="blog-entry-meta-label fs-sm"><i class="ci-time"></i>{{ blog.date_added_day }} {{ blog.date_added_month }} </span><img src="{{ blog.image }}" alt="{{ blog.title }}"></a>
                {% endif %}
                <div class="d-flex justify-content-between mb-2 pt-1">
                    <h2 class="h5 blog-entry-title mb-0"><a href="{{ blog.href }}">{{ blog.title }}</a></h2>
                </div>
                <div class="d-flex align-items-center fs-sm">
                    {% if blog.tags %}
                    <div class="fs-sm text-muted">
                        {% for tag in blog.tags|slice(0,2) %}
                        <a href="index.php?route=extension/blog/home&tag={{ tag|trim }}" class="blog-entry-meta-link">{{ tag|trim }}</a>
                        {% endfor %}
                    </div>
                    {% endif %}
                    {% if blog.short_description %}
                        <p class="fs-sm">{{ blog.short_description }}</p>
                    {% endif %}
                </div>
            </article>
            {% endfor %}
        {% endif %}
        </div>
    </div>

</section>