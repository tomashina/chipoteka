{{ header }}

<main class="offcanvas-enabled">
    <!-- Custom page title-->
    <div class="page-title-overlap pt-4 pe-lg-3 ">
        <div class="container-fluid py-2">
            <div class="pe-lg-4 text-center text-lg-start">
                <h1 class="category-page-title text-primary" id="page-title">{{ heading_title }}</h1>
            </div>
            <div class=" mb-3 mb-lg-0">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb flex-lg-nowrap justify-content-center justify-content-lg-start">
                        {% for breadcrumb in breadcrumbs %}
                            <li class="breadcrumb-item"><a class="text-nowrap" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                        {% endfor %}
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div id="content" class="container-fluid pb-5 mb-2 mb-md-4">
        {{ content_top }}

        <div class="info-wrapper pb-3 mb-3">
            <div class="page-search d-none search-field d-xl-flex flex-nowrap mx-4 trazi collapse">
                <i class="fal fa-search position-absolute top-50 start-0 translate-middle-y ms-3" style="z-index:1000"></i>
                <input class="form-control rounded-start w-100" name="servis_search" id="servis-input" type="text" autocomplete="off" value="{{ search }}" placeholder="{{ basel_text_search }}">
                <span class="btn btn-contrast do-search main d-none">{{ basel_text_search }}</span>
                <button type="button" class="btn btn-default btn-lg" id="servis-click"><i class="fa fa-search"></i></button>
            </div>

            {{ description }}

            <div class="codeview" id="servis-view">

            </div>

            {{ content_bottom }}
        </div>
    </div>


    <script type="text/javascript"><!--
        $("#servis-click").on("click", function(event) {
            var $input = $('#servis-input').val();

            $.ajax({
                url: 'index.php?route=information/servis/search&servis_id=' +  encodeURIComponent($input),
                dataType: 'json',
                success: function(json) {
                    console.log(json)

                    $('#servis-view').text(JSON.stringify(json));

                }
            });
        });
        //--></script>

{{ footer }}