{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9 col-sm-8' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1 id="page-title">{{ heading_title }}</h1>
      <p>{{ text_total }} <b>{{ total }}</b>.</p>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <td class="text-left">{{ column_date_added }}</td>
              <td class="text-left">{{ column_description }}</td>
              <td class="text-right">{{ column_points }}</td>
            </tr>
          </thead>
          <tbody>
            {% if rewards %}
            {% for reward in rewards %}
            <tr>
              <td class="text-left">{{ reward.date_added }}</td>
              <td class="text-left">
              {% if reward.order_id %}
                <a href="{{ reward.href }}">{{ reward.description }}</a>
                {% else %}
                {{ reward.description }}
              {% endif %}</td>
              <td class="text-right">{{ reward.points }}</td>
            </tr>
            {% endfor %}
            {% else %}
            <tr>
              <td class="text-left" colspan="3">{{ text_empty }}</td>
            </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
        {% if pagination %}
        <div class="row pagination-holder">
        <div class="col-sm-6 xs-text-center">{{ pagination }}</div>
        <div class="col-sm-6 text-right xs-text-center"><span class="pagination-text">{{ results }}</span></div>
        </div>
        {% endif %}
      
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}