{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9 col-sm-8' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1 id="page-title">{{ heading_title }}</h1>
      
      {% if products %}
        <table class="table table-bordered">
          <thead>
            <tr>
              <td class="remove-cell"></td>
              <td></td>
              <td>{{ column_name }}</td>
              <td class="hidden-xs hidden-sm">{{ column_model }}</td>
              <td class="text-right hidden-xs hidden-sm">{{ column_stock }}</td>
              <td class="text-right price-cell hidden-xs hidden-sm">{{ column_price }}</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            {% for product in products %}
            <tr>
            <td class="remove-cell text-center"><a href="{{ product.remove }}" title="{{ button_remove }}" class="product-remove"><i class="fa fa-times"></i></a></td>
              <td class="image">
              {% if product.thumb %}
                <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" /></a>
                {% endif %}
                </td>
              <td>
              <a class="hover_uline" href="{{ product.href }}">{{ product.name }}</a>
              <span class="display-block hidden-md hidden-lg">
                {% if not product.special %}
                  {{ product.price }}
                  {% else %}
                  <span class="price">{{ product.special }} </span><span class="price-old">{{ product.price }}</span>
                  {% endif %}
                  </span>
                  <span class="display-block hidden-md hidden-lg">{{ product.stock }}</span>
                </span>
                </td>
              <td class="hidden-xs hidden-sm">{{ product.model }}</td>
              <td class="text-right hidden-xs hidden-sm">{{ product.stock }}</td>
              <td class="text-right price-cell hidden-xs hidden-sm">
              {% if product.price %}
                  {% if not product.special %}
                  {{ product.price }}
                  {% else %}
                  <span class="price">{{ product.special }}</span><span class="price-old">{{ product.price }}</span>
                  {% endif %}
              {% endif %}</td>
              <td class="text-right"><button type="button" onclick="cart.add('{{ product.product_id }}');" class="btn btn-sm btn-primary">{{ button_cart }}</button>
                </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>

      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}