{{ header }}



<main class="offcanvas-enabled">

<!-- Page Title-->
<div class="page-title-overlap bg-dark pt-4 ps-lg-4 pe-lg-3">
  <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
    <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-start">
          {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item"><a class="text-nowrap" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ol>
      </nav>
    </div>
    <div class="order-lg-1 pe-lg-4 text-center text-lg-start">
      <h1 class="h2 text-light mb-0">{{ heading_title }}</h1>
    </div>
  </div>
</div>
<div class="container pb-5 mb-2 mb-md-4 ps-lg-4 pe-lg-3">
  <div class="row">
    <!-- Sidebar-->

          {{ column_left }}

    <!-- Content  -->
    <section class="col-lg-8" id="account-edit">
      <!-- Toolbar-->
      <div class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-3">
        <h6 class="fs-base text-light mb-0">{{ text_password }}</h6><a class="btn btn-primary " href="{{ logout }}"><i class="fal fa-sign-out me-2"></i>{{ text_logout }}</a>
      </div>
      <!-- Profile form-->

      <h4>Promjeni lozinku za raƒçun: </h4>



      {% if addresses %}

            {% for result in addresses %}
             <p>{{ result.address }}</p>

            {% endfor %}

      {% else %}
        <p>{{ text_empty }}</p>
      {% endif %}

      <p>{{ customer_info.email }} - {{ customer_info.telephone }}</p>


      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">

        <input type="hidden" name="customer_id" value="{{ customer_id }}"  />
        <input type="hidden" name="not" value="2"  />
        <div class="row gx-4 gy-3">
            <div class="col-sm-6">
              <label class="form-label" for="account-pass">{{ entry_password }}</label>
              <div class="password-toggle">
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control"  autocomplete="new-password" />


                <label class="password-toggle-btn" aria-label="Show/hide password">
                  <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                </label>
              </div>
              {% if error_password and val == ''%}
                <div class="text-danger">{{ error_password }}</div>
              {% endif %}
            </div>
            <div class="col-sm-6">
              <label class="form-label" for="account-confirm-pass">{{ entry_confirm }}</label>
              <div class="password-toggle">
                <input type="password" name="confirm" value="{{ confirm }}" placeholder="{{ entry_confirm }}" id="input-confirm" class="form-control" />

                <label class="password-toggle-btn" aria-label="Show/hide password">
                  <input class="password-toggle-check" type="checkbox"><span class="password-toggle-indicator"></span>
                </label>
              </div>
              {% if error_confirm %}
                <div class="text-danger">{{ error_confirm }}</div>
              {% endif %}
            </div>
            <div class="col-12">
              <hr class="mt-2 mb-3">
              <div class="d-flex flex-wrap justify-content-between align-items-center">

                <button class="btn btn-primary mt-3 mt-sm-0" type="submit">{{ button_save }}</button>
              </div>
            </div>
        </div>


  </form>

  </section>
</div>
</div>


{{ footer }}