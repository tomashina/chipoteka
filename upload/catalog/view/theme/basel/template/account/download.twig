{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9 col-sm-8' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1 id="page-title">{{ heading_title }}</h1>
      {% if downloads %}
      <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>{{ column_order_id }}</td>
            <td>{{ column_name }}</td>
            <td>{{ column_size }}</td>
            <td>{{ column_date_added }}</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          {% for download in downloads %}
          <tr>
            <td>#{{ download.order_id }}</td>
            <td>{{ download.name }}</td>
            <td>{{ download.size }}</td>
            <td>{{ download.date_added }}</td>
            <td class="text-right"><a href="{{ download.href }}" class="btn btn-primary btn-sm">{{ button_download }}</a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
          {% if pagination %}
          <div class="row pagination-holder">
            <div class="col-sm-6 xs-text-center">{{ pagination }}</div>
            <div class="col-sm-6 text-right xs-text-center"><span class="pagination-text">{{ results }}</span></div>
          </div>
          {% endif %}
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}