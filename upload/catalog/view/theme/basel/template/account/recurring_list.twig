{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9 col-sm-8' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1 id="page-title">{{ heading_title }}</h1>
      {% if recurrings %}
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <td>{{ column_order_recurring_id }}</td>
              <td>{{ column_product }}</td>
              <td class="hidden-xs hidden-sm">{{ column_status }}</td>
              <td class="hidden-xs hidden-sm">{{ column_date_added }}</td>
              <td class="text-right"></td>
            </tr>
          </thead>
          <tbody>
            {% for recurring in recurrings %}
            <tr>
              <td>#{{ recurring.order_recurring_id }}</td>
              <td>{{ recurring.product }}</td>
              <td class="hidden-xs hidden-sm">{{ recurring.status }}</td>
              <td class="hidden-xs hidden-sm">{{ recurring.date_added }}</td>
              <td class="text-right"><a href="{{ recurring.view }}" class="btn btn-primary btn-sm ">{{ button_view }}</a></td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      
        {% if pagination %}
        <div class="row pagination-holder">
        <div class="col-sm-6 xs-text-center">{{ pagination }}</div>
        <div class="col-sm-6 text-right xs-text-center"><span class="pagination-text">{{ results }}</span></div>
        </div>
        {% endif %}
      
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}