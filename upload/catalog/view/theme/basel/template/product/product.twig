    <script>
        $(".ddd").on("click", function(event) {
            var $button = $(this);
            var $input = $button.closest('.quantity').find("input.input-quantity");

            if ($button.data('multi') == "1" ) {
                var newVal = parseFloat($input.val()) + 1;
            } else {
                // Don't allow decrementing below zero
                if ($input.val() > 1) {
                    var newVal = parseFloat($input.val()) - 1;
                } else {
                    newVal = 1;
                }
            }
