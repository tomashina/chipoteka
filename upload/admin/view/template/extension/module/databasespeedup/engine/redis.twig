<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
        <h5><span class="required">*</span> <strong>{{ text_isense_db_cache_redis_settings }}</strong></h5>
        <span class="help">{{ text_isense_db_cache_redis_settings_helper }}</span>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="form-group">
            <label for="redis_hostname">{{ text_hostname }}</label>
            <input type="text" class="form-control" id="redis_hostname" name="{{ moduleName }}[engine_redis][redis_hostname]" value="{{ moduleData.engine_redis.redis_hostname ? moduleData.engine_redis.redis_hostname : 'localhost' }}" />
        </div>

        <div class="form-group">
             <label for="redis_port">{{ text_port }}</label>
             <input class="form-control" type="text" id="redis_port"  name="{{ moduleName }}[engine_redis][redis_port]" value="{{ moduleData.engine_redis.redis_port ? moduleData.engine_redis.redis_port : '6379' }}" />
        </div>

        <div class="form-group">
             <label for="redis_port">{{ text_password }}</label>
             <input class="form-control" type="text" id="redis_password"  name="{{ moduleName }}[engine_redis][redis_password]" value="{{ moduleData.engine_redis.redis_password ? moduleData.engine_redis.redis_password : '' }}" />
        </div>

        <div class="form-group">
             <label for="redis_port">{{ text_prefix }}</label>
             <input class="form-control" type="text" id="redis_prefix"  name="{{ moduleName }}[engine_redis][redis_prefix]" value="{{ moduleData.engine_redis.redis_prefix ? moduleData.engine_redis.redis_prefix : db_prefix }}" />
        </div>

        <div class="form-group">
             <label for="redis_port">{{ text_expire }}</label>
             <input class="form-control" type="text" id="redis_prefix"  name="{{ moduleName }}[engine_redis][redis_expire]" value="{{ moduleData.engine_redis.redis_expire ? moduleData.engine_redis.redis_expire : '99999' }}" />
        </div>
    </div>
</div>
